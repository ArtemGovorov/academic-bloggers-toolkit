{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**",
        "../../typings/**"
    ],
    "exclude": [
        "node_modules",
        "typings/browser",
        "typings/browser.d.ts",
        "dist"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": true
    },
    "files": [
        "lib/js/frontend.ts",
        "lib/js/tinymce-entrypoint.ts",
        "lib/js/utils/__tests__/CSLFieldProcessors-test.ts",
        "lib/js/utils/__tests__/HelperFunctions-test.ts",
        "lib/js/utils/__tests__/RISParser-test.ts",
        "lib/js/utils/Constants.ts",
        "lib/js/utils/CrossRefAPI.ts",
        "lib/js/utils/CSLFieldProcessors.ts",
        "lib/js/utils/CSLPreprocessor.ts",
        "lib/js/utils/HelperFunctions.ts",
        "lib/js/utils/Modal.ts",
        "lib/js/utils/PubmedAPI.ts",
        "lib/js/utils/RISParser.ts",
        "typings/ABT.d.ts",
        "typings/main.d.ts",
        "typings/main/ambient/enzyme/index.d.ts",
        "typings/main/ambient/jest/index.d.ts",
        "typings/main/ambient/react-addons-test-utils/index.d.ts",
        "typings/main/ambient/react-dom/index.d.ts",
        "typings/main/ambient/react/index.d.ts",
        "typings/main/ambient/require/index.d.ts",
        "typings/main/ambient/sinon/index.d.ts",
        "lib/js/components/ImportWindow.tsx",
        "lib/js/components/PubmedWindow.tsx",
        "lib/js/components/ReferenceWindow/__tests__/MetaFields-test.tsx",
        "lib/js/components/ReferenceWindow/__tests__/People-test.tsx",
        "lib/js/components/ReferenceWindow/ManualEntryContainer.tsx",
        "lib/js/components/ReferenceWindow/MetaFields.tsx",
        "lib/js/components/ReferenceWindow/People.tsx",
