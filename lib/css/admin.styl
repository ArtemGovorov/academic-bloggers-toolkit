.row-container
    display flex
    flex-direction column

    .row
        display flex
        padding 15px 10px 15px 0
        border-right 1px solid $c9
        border-left 1px solid $c9
        align-items center

    .even
        background-color $f9

    .flex1
        flex 1
        padding 0 5px

    .bordered
        border 1px solid $c9
        border-bottom 0

    label
        white-space nowrap
        padding 0 10px


// =========== Reference List ====================
#abt_reflist
    .inside
        margin 0
#abt-reflist
    .panel
        display flex
        padding 10px 0
        margin-top -6px
        background $f5
        border-bottom 1px solid $border
        border-top 1px solid $border
        clear both
        justify-content space-around
        button.abt-reflist-button
            background 0
            border 0
            border-radius 2px
            color $555
            cursor pointer
            height 30px
            outline 0
            min-width 40px
            $selector = selector()
            &:hover
                box-shadow inset 0 1px 0 $white,0 1px 0 rgba(0,0,0,.08)
                border 1px solid $555d66
            &:active
                @extend {$selector}:hover
                background $ebebeb
                box-shadow inset 0 2px 5px -3px rgba(0,0,0,.3)
            &:disabled
                color $a0a5aa
                pointer-events none
            span
                pointer-events: none
                height 18px
                width 18px
                &.insert-inline
                    transform rotateY(180deg)
                    padding-left 2px
                &.add-reference
                    line-height 22px
                    width 20px
                    padding-right 2px
                &.remove-reference
                    font-weight 900
                    padding-right 2px
                &.hamburger-menu
                    font-size 2em
                    padding 0 8px 6px 0
    #abt-reflist-menu
        display flex
        flex-direction column
        background $f5
        padding 5px 5px 0 5px
        height auto
        align-content flex-end
        border-bottom solid $border 1px
        #style-select
            padding-bottom 10px
            label
                font-size 1.2em
                font-weight 600
        .option-buttons
            margin 0
            .row-btn
                text-align center
                height 40px
                user-select none
                font normal 600 1.2em/40px 'Open Sans', sans-serif
                margin 0 -5px
                border-top solid $border 1px
                border-bottom solid $border 1px
                cursor pointer
                &:hover
                    background darken($f5, 5)
                &:active
                    background darken($f5, 10)

    .list
        max-height 1000px
        overflow-y auto
        overflow-x hidden

        .abt-card
            user-select none

        .csl-entry
            &.hanging-indent
                text-indent -20px
                padding-left 20px
            .csl-left-margin
                display inline
                padding 0 4px 0 0
                font-weight 600
            .csl-right-inline
                display inline

    .menu-enter
        max-height 1px
        overflow hidden
        &.menu-enter-active
            transition max-height .2s linear
            max-height 400px

    .menu-leave
        max-height 400px
        &.menu-leave-active
            transition max-height .1s linear
            max-height 1px
            overflow hidden

.Grid__cell
    cursor pointer
